        <Label Content="从输入的种子ID搜索，单次搜索10000，代表一次自增搜一万个种子，然后会打印一次时间。搜索完总次数后会结束" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="486" Height="25" FontSize="9" FontStyle="Italic"/>
        <Label Content="筛选条件" HorizontalAlignment="Left" Margin="16,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.092,0.413" FontWeight="Bold"/>
        <Label Content="必须条件都满足的种子才会记录&#xA;仅记录条件会将参数写入文件，但不满足不影响筛选&#xA;磁石总量、蓝巨星数量是整个宇宙的条件，如果添值是独立的必须条件（始终会记录）" HorizontalAlignment="Left" Margin="87,69,0,0" VerticalAlignment="Top" Width="446" FontSize="10" FontStyle="Italic" Grid.ColumnSpan="2"/>
        <Label Content="卫星数" HorizontalAlignment="Left" Margin="16,151,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="planetCount1" HorizontalAlignment="Left" Height="21" Margin="62,155,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="34" AutomationProperties.Name="planetCount1"/>
        <Label Content="潮汐锁定&#xA;" HorizontalAlignment="Left" Margin="101,153,0,0" VerticalAlignment="Top" Height="25" Width="59"/>
        <TextBox x:Name="planetCount2" HorizontalAlignment="Left" Height="21" Margin="165,157,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="32" AutomationProperties.Name="planetCount2" RenderTransformOrigin="-0.01,0.508"/>
        <Label Content="光度" HorizontalAlignment="Left" Margin="304,155,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="0.127,0.605"/>
        <TextBox x:Name="dysonLumino" HorizontalAlignment="Left" Height="21" Margin="347,159,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="25" RenderTransformOrigin="-0.025,0.484" AutomationProperties.Name="dysonLumino"/>
        <CheckBox x:Name="IsInDsp" Content="戴森球是否包含第1颗" HorizontalAlignment="Left" Margin="170,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.432,-0.852" AutomationProperties.Name="IsInDsp"/>
        <Label Content="初始星球距离&#xD;&#xA;" HorizontalAlignment="Left" Margin="16,185,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="0.438,0.344"/>
        <TextBox x:Name="distanceToBirth" HorizontalAlignment="Left" Height="21" Margin="98,189,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="67" AutomationProperties.Name="distance"/>
        <ComboBox x:Name="necessaryCondition" HorizontalAlignment="Left" Margin="75,120,0,0" VerticalAlignment="Top" Width="120" AutomationProperties.Name="necessaryCondition" SelectionChanged="ComboBox_SelectionChanged_Necessary" />
        <Label Content="必须条件" HorizontalAlignment="Left" Margin="12,117,0,0" VerticalAlignment="Top"/>
        <Label Content="仅记录" HorizontalAlignment="Left" Margin="210,120,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="LogCondition" HorizontalAlignment="Left" Margin="267,121,0,0" VerticalAlignment="Top" Width="120" AutomationProperties.Name="LogCondition" SelectionChanged="ComboBox_SelectionChanged_Log"/>
        <Label Content="磁石总量" HorizontalAlignment="Left" Margin="394,120,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="MagCount" HorizontalAlignment="Left" Height="21" Margin="458,121,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29" AutomationProperties.Name="MagCount" RenderTransformOrigin="-0.041,0.587"/>
        <Label Content="本星系所有星球上各类矿物数量，单位是矿点，一堆矿是一个矿点。例如19单位磁石约300G磁石矿" HorizontalAlignment="Left" Margin="21,248,0,0" VerticalAlignment="Top" Width="486" Height="25" FontSize="9" FontStyle="Italic" Grid.ColumnSpan="2"/>
        <Label Content="铁" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top"/>
        <Label Content="行星总数" HorizontalAlignment="Left" Margin="204,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.016,0.086"/>
        <TextBox x:Name="planetCount3" HorizontalAlignment="Left" Height="21" Margin="267,157,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="4.248,0.53" AutomationProperties.Name="planetCount3"/>
        <Label Content="铜" HorizontalAlignment="Left" Margin="69,271,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resource1" HorizontalAlignment="Left" Height="23" Margin="98,275,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource1"/>
        <Label Content="钛" HorizontalAlignment="Left" Margin="201,269,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.507,0.578"/>
        <TextBox x:Name="resource2" HorizontalAlignment="Left" Height="23" Margin="165,273,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource2"/>
        <Label Content="石" HorizontalAlignment="Left" Margin="256,271,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resource4" HorizontalAlignment="Left" Height="23" Margin="288,271,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource4"/>
        <Label Content="煤" HorizontalAlignment="Left" Margin="319,269,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.395,0.617"/>
        <TextBox x:Name="resource5" HorizontalAlignment="Left" Height="23" Margin="356,271,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource5"/>
        <Label Content="可燃" HorizontalAlignment="Left" Margin="387,269,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.99,0.5"/>
        <TextBox x:Name="resource7" HorizontalAlignment="Left" Height="23" Margin="426,269,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource7"/>
        <Label Content="金伯利" HorizontalAlignment="Left" Margin="456,269,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="resource0" HorizontalAlignment="Left" Height="23" Margin="38,273,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource0"/>
        <TextBox x:Name="resource8" HorizontalAlignment="Left" Height="23" Margin="10,269,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource8" Grid.Column="1"/>
        <Label Content="分形硅" HorizontalAlignment="Left" Margin="12,308,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resource9" HorizontalAlignment="Left" Height="23" Margin="62,310,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource9"/>
        <Label Content="有机晶体" HorizontalAlignment="Left" Margin="97,308,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.078,0.547"/>
        <TextBox x:Name="resource10" HorizontalAlignment="Left" Height="23" Margin="160,310,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource10"/>
        <Label Content="光栅石" HorizontalAlignment="Left" Margin="191,308,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.099,0.587"/>
        <TextBox x:Name="resource11" HorizontalAlignment="Left" Height="23" Margin="242,310,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource11"/>
        <Label Content="刺笋" HorizontalAlignment="Left" Margin="280,308,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resource12" HorizontalAlignment="Left" Height="23" Margin="325,310,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource12"/>
        <CheckBox x:Name="resource6" Content="是否有原油" HorizontalAlignment="Left" Margin="372,314,0,0" VerticalAlignment="Top"  AutomationProperties.Name="resource6"/>
        <CheckBox x:Name="resource1000" Content="是否有水" HorizontalAlignment="Left" Margin="35,346,0,0" VerticalAlignment="Top"  AutomationProperties.Name="resource1000"/>
        <CheckBox x:Name="resource1116" Content="是否有硫酸" HorizontalAlignment="Left" Margin="119,346,0,0" VerticalAlignment="Top"  AutomationProperties.Name="resource1116"/>
        <Button x:Name="AddNecessary" Content="添加成必须条件" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_AddNecessary" AutomationProperties.Name="AddNecessary"/>
        <Button x:Name="AddLog" Content="添加成仅记录条件" HorizontalAlignment="Left" Margin="128,380,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_AddLog" AutomationProperties.Name="AddLog"/>
        <Button x:Name="Del" Content="删除当前条件" HorizontalAlignment="Left" Margin="250,380,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_Del" AutomationProperties.Name="Del"/>
        <Button x:Name="Start" Content="开始" HorizontalAlignment="Left" Margin="160,441,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Start" AutomationProperties.Name="Start"/>
        <Label Content="硅&#xD;&#xA;" HorizontalAlignment="Left" Margin="133,271,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resource3" HorizontalAlignment="Left" Height="23" Margin="230,273,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.564,-1.108" AutomationProperties.Name="resource3"/>
        <ProgressBar x:Name="process" HorizontalAlignment="Left" Height="22" Margin="335,439,0,0" VerticalAlignment="Top" Width="221" AutomationProperties.Name="process" Maximum="1" Grid.ColumnSpan="2"/>
        <Label Content="至少几个星系满足以上条件" HorizontalAlignment="Left" Margin="291,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.312,0.397" Width="161" Height="25"/>
        <TextBox x:Name="starCount" HorizontalAlignment="Left" Height="19" Margin="461,344,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="41" RenderTransformOrigin="1.042,0.533" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="IsLogResource" Content="是否写矿物数量&#xD;&#xA;" HorizontalAlignment="Left" Margin="461,314,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.274,0.578" Width="121" Height="19" IsChecked="True" Grid.ColumnSpan="2"/>
        <Expander x:Name="SearchLog" Header="显示LOG" HorizontalAlignment="Left" Height="113" Margin="24,499,0,0" VerticalAlignment="Top" Width="394" IsExpanded="True">
            <Grid Background="#FFE5E5E5" Margin="0,0,-2,0" Height="123" RenderTransformOrigin="0.555,0.496">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="36*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="38*"/>
                    <ColumnDefinition Width="187*"/>
                    <ColumnDefinition Width="175*"/>
                    <ColumnDefinition Width="48"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Expander>
        <Label Content="文件名" HorizontalAlignment="Left" Margin="28,469,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.696,0.68"/>
        <TextBox x:Name="FileName" HorizontalAlignment="Left" Height="23" Margin="89,471,0,0" TextWrapping="Wrap" Text="seed1" VerticalAlignment="Top" Width="98"/>
        <Label Content="文件存成csv，在根目录，默认seed，可改名（方便多开）；&#xA;导出条件也使用此后缀&#xA;输入种子ID，打印一个CSV，显示单个种子详细信息&#xA;" HorizontalAlignment="Left" Margin="199,466,0,0" VerticalAlignment="Top" Width="350" Height="52" Grid.ColumnSpan="2" FontSize="10" FontStyle="Italic"/>
        <Button x:Name="ImportFile" Content="导入条件"  Click="Button_Click_ImportFile" HorizontalAlignment="Left" Margin="10,409,0,0" VerticalAlignment="Top" Width="52" RenderTransformOrigin="-3.84,1.579"/>
        <Button x:Name="ExportFile" Content="导出条件"  Click="Button_Click_ExportFile" HorizontalAlignment="Left" Margin="69,409,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="SaveConditionPath" HorizontalAlignment="Left" Height="18" Margin="242,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.ColumnSpan="2"/>
        <Label Content="距离选0，则为筛选初始星系" HorizontalAlignment="Left" Margin="24,215,0,0" VerticalAlignment="Top" Width="136" FontStyle="Italic" FontSize="10"/>
        <Label Content="气态巨星" HorizontalAlignment="Left" Margin="377,157,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.192,0" Width="62"/>
        <TextBox x:Name="GasCount" HorizontalAlignment="Left" Height="23" Margin="439,159,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.455,0.58"/>
        <CheckBox x:Name="IsInDsp2" Content="是否包含第2颗" HorizontalAlignment="Left" Margin="319,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.432,-0.852" AutomationProperties.Name="IsInDsp"/>
        <Label Content="蓝巨星" HorizontalAlignment="Left" Margin="0,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.192,0" Width="46" Grid.Column="1"/>
        <TextBox x:Name="BluePlanetCount" HorizontalAlignment="Left" Height="23" Margin="46,120,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="2.758,0.493" Grid.Column="1"/>
        <GridSplitter HorizontalAlignment="Left" Height="3" Margin="24,147,0,0" VerticalAlignment="Top" Width="544" Grid.ColumnSpan="2"/>
        <GridSplitter HorizontalAlignment="Left" Height="3" Margin="21,66,0,0" VerticalAlignment="Top" Width="544" Grid.ColumnSpan="2"/>
        <GridSplitter HorizontalAlignment="Left" Height="3" Margin="15,370,0,0" VerticalAlignment="Top" Width="544" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="IsInBluePlanet" Content="该星系是否为蓝巨星" HorizontalAlignment="Left" Margin="170,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.432,-0.852" AutomationProperties.Name="IsInDsp"/>
        <Label Content="冰巨星" HorizontalAlignment="Left" Margin="481,159,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.192,0" Width="62" Grid.ColumnSpan="2"/>
        <TextBox x:Name="IcePlanetCount" HorizontalAlignment="Left" Height="23" Margin="38,161,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.455,0.58" Grid.Column="1"/>
        <Button x:Name="ImportSeedFile" Content="导入种子ID表"  Click="Button_Click_ImportSeedFile" HorizontalAlignment="Left" Margin="133,409,0,0" VerticalAlignment="Top" Width="97" RenderTransformOrigin="-3.84,1.579" ToolTip="使用csv文件，默认使用第一列的数字，第一列没有数字，则使用第二列的数字（兼容旧版本到处的ID）"/>
        <ComboBox x:Name="StartType" HorizontalAlignment="Left" Margin="21,440,0,0" VerticalAlignment="Top" Width="134" SelectedIndex="0">
            <ComboBoxItem Content="正常搜索" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="写出单个种子详细" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="搜索导入的ID" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Button x:Name="StopSearch" Content="终止" HorizontalAlignment="Left" Margin="242,440,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Stop" AutomationProperties.Name="Start"/>
    </Grid>
</Window>
